<!-- Alerts -->
{{#each categories}}
  {{#is name 'Announcements'}}
    {{#each sections}}
      {{#each articles}}
        <div id="alerts-banner">
          <div class="alert">
            <a href="{{url}}"><strong class="ticket-link">{{title}}</strong></a>
          </div>
          <a href="#" class="btn-close"></a>
        </div>
      {{/each}}
    {{/each}}
  {{/is}}
{{/each}}
{{!-- IE warning --}}
<div class="ie-warning">
  <p>For the best experience and to avoid any technical issues, please use<br /> a newer browser such as Chrome, Safari, or Firefox. Thank you.</p>
</div>
{{!-- /IE warning --}}
<h1 class="visibility-hidden">{{ help_center.name }}</h1>
<style type="text/css">
.blocks-item:hover .blocks-circle {
  transform: scale(1.1);
}

